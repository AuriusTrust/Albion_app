        <!-- book example -->
        <RelativePanel Grid.Row="7" Grid.Column="1" >
            <Button Name="testbouton" Content="Button" Click="Test" RelativePanel.AlignRightWithPanel="True"/>
            <TextBlock Name="retourTest" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignBottomWithPanel="True"/>
            
            <GridView ItemsSource="{x:Bind Cuirs}">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="data:Cuirs_Equipements">
                        <StackPanel>
                            <Image Source="{x:Bind cuirImage}"
                               Width="60" Height="60"/>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

        </RelativePanel>


    </Grid>
</Page>
