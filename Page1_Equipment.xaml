        <Button Height="75" Width="95"    
                Name="Button1" 
                   
                    RelativePanel.AlignLeftWithPanel="True">
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/T_1.JPG"/>
                </Button.Background>
            </Button>

            <Button Height="75" Width="90"    
                Name="Button2" 
                    RelativePanel.AlignHorizontalCenterWithPanel="True">
                <Button.Background>
